<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <LethalCompanyCommonTargetsHasBeenImported>true</LethalCompanyCommonTargetsHasBeenImported>
  </PropertyGroup>
  
  <PropertyGroup>
    <_DirectoryLethalCompanyTargets>$([MSBuild]::GetPathOfFileAbove('Directory.LethalCompany.targets', $(MSBuildProjectDirectory)))</_DirectoryLethalCompanyTargets>
  </PropertyGroup>

  <Import Project="$(_DirectoryLethalCompanyTargets)" Condition="Exists($(_DirectoryLethalCompanyTargets))"/>

  <Import Project="FindGameDirectory.props" Condition="'$(GameDirectory)' == '' and '$(FindGameDirectoryPropsHasBeenImported)' != 'true'" />
  <Import Project="FindBepInExDirectory.props" Condition="'$(BepInExDirectory)' == '' and '$(FindBepInExDirectoryPropsHasBeenImported)' != 'true'" />

  <PropertyGroup>
    <GameDirectory Condition="Exists($(GameDirectory))">$([MSBuild]::NormalizePath($(GameDirectory)))</GameDirectory>
    <BepInExDirectory Condition="Exists($(BepInExDirectory))">$([MSBuild]::NormalizePath($(BepInExDirectory)))</BepInExDirectory>
  </PropertyGroup>

  <Import Project="FindGameSubpaths.targets" Condition="'$(FindGameSubpathsTargetsHasBeenImported)' != 'true'" />
  <Import Project="FindBepInExSubpaths.targets" Condition="'$(FindBepInExSubpathsTargetsHasBeenImported)' != 'true'" />

</Project>