<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup>
    <LethalCompanyCommonPropsHasBeenImported>true</LethalCompanyCommonPropsHasBeenImported>
  </PropertyGroup>
  
  <PropertyGroup>
    <_DirectoryLethalCompanyProps>$([MSBuild]::GetPathOfFileAbove('Directory.LethalCompany.props', $(MSBuildProjectDirectory)))</_DirectoryLethalCompanyProps>
  </PropertyGroup>

  <Import Project="$(_DirectoryLethalCompanyProps)" Condition="Exists($(_DirectoryLethalCompanyProps))"/>

  <Import Project="FindGameDirectory.props" Condition="'$(GameDirectory)' == '' and '$(FindGameDirectoryPropsHasBeenImported)' != 'true'" />
  <Import Project="FindBepInExDirectory.props" Condition="'$(GameDirectory)' != '' and '$(FindBepInExDirectoryPropsHasBeenImported)' != 'true'" />

  <PropertyGroup>
    <GameDirectory Condition="Exists($(GameDirectory))">$([MSBuild]::NormalizeDirectory($(GameDirectory)))</GameDirectory>
    <BepInExDirectory Condition="Exists($(BepInExDirectory))">$([MSBuild]::NormalizeDirectory($(BepInExDirectory)))</BepInExDirectory>
  </PropertyGroup>

  <PropertyGroup>
    <GameExe Condition="'$(GameExe)' == ''">Lethal Company.exe</GameExe>
  </PropertyGroup>
  
</Project>